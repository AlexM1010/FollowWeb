{
  "_comment": "Full network k-core analysis configuration",
  "_description": "Analyze the entire network with k-core filtering",
  
  "input_file": "examples/followers_following.json",
  "output_file_prefix": "Output/FullNetwork",
  "strategy": "k-core",
  
  "pipeline_stages": {
    "enable_strategy": true,
    "enable_analysis": true,
    "enable_visualization": true,
    "enable_community_detection": true,
    "enable_centrality_analysis": true,
    "enable_path_analysis": true
  },
  
  "analysis_mode": {
    "mode": "medium",
    "sampling_threshold": 3000,
    "max_layout_iterations": 800
  },
  
  "output_control": {
    "generate_html": true,
    "generate_png": true,
    "generate_reports": true,
    "enable_timing_logs": false
  },
  
  "k_values": {
    "strategy_k_values": {
      "k-core": 1
    },
    "default_k_value": 1
  },
  
  "visualization": {
    "node_size_metric": "degree",
    "base_node_size": 15.0,
    "node_size_multiplier": 2.5,
    "static_image": {
      "layout": "kamada_kawai",
      "width": 1600,
      "height": 1200
    }
  }
}