# Include essential documentation
include README.md
include LICENSE
include CHANGELOG.md
include INSTALL_GUIDE.md

# Include configuration files
recursive-include configs *.json

# Include example data (but not generated cache files)
recursive-include examples *.json *.txt
recursive-include examples/sample_data *.json

# Include documentation
recursive-include docs *.md *.rst

# Include test data (anonymized datasets only)
recursive-include tests/test_data *.json

# Exclude generated files and caches
global-exclude *.pyc
global-exclude *.pyo
global-exclude *.pyd
global-exclude __pycache__
global-exclude *.so
global-exclude *.db
global-exclude *.gpickle
global-exclude *.pkl
global-exclude *.log
global-exclude .DS_Store
global-exclude *.egg-info

# Exclude development and CI files
exclude .gitignore
exclude .gitattributes
exclude mypy_errors.txt
recursive-exclude .github *
recursive-exclude .kiro *
recursive-exclude tests/Output *
recursive-exclude Output *
recursive-exclude checkpoints *
recursive-exclude custom_checkpoints *
recursive-exclude data/freesound_library *.db *.gpickle *.pkl

# Exclude IDE and editor files
global-exclude .vscode
global-exclude .idea
global-exclude *.swp
global-exclude *.swo
global-exclude *~

# Exclude build artifacts
global-exclude build
global-exclude dist
global-exclude *.egg-info
