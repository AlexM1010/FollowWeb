# Include essential documentation
include README.md
include LICENSE
include CHANGELOG.md
include INSTALL_GUIDE.md
include TESTING_QUICK_REFERENCE.md

# Include configuration files
recursive-include configs *.json *.md

# Include template assets (CSS, JS for visualizations)
recursive-include FollowWeb_Visualizor *.css *.js

# Include documentation
recursive-include docs *.md *.rst *.json *.gif

# Include example data
recursive-include examples *.json *.md

# Exclude test files (not needed in distribution)
# Tests should be run from source repository, not from installed package
prune tests
prune analysis_tools

# Exclude development files
exclude Makefile
exclude pytest.ini
exclude .pypirc.template
exclude REQUIREMENTS_GUIDE.md
exclude requirements.txt
exclude requirements-test.txt
exclude requirements-minimal.txt
exclude requirements-ci.txt

# Exclude example scripts (keep sample data only)
recursive-exclude examples *.py

# Exclude generated files and caches
global-exclude *.pyc
global-exclude *.pyo
global-exclude *.pyd
global-exclude __pycache__
global-exclude *.so
global-exclude *.db
global-exclude *.gpickle
global-exclude *.pkl
global-exclude *.log
global-exclude .DS_Store
global-exclude *.egg-info

# Exclude development and CI files
exclude .gitignore
exclude .gitattributes
exclude mypy_errors.txt
recursive-exclude .github *
recursive-exclude .kiro *
recursive-exclude tests/Output *
recursive-exclude Output *
recursive-exclude checkpoints *
recursive-exclude custom_checkpoints *
recursive-exclude data/freesound_library *.db *.gpickle *.pkl

# Exclude IDE and editor files
global-exclude .vscode
global-exclude .idea
global-exclude *.swp
global-exclude *.swo
global-exclude *~

# Exclude build artifacts
global-exclude build
global-exclude dist
global-exclude *.egg-info
